@model accgame.Context.GoiNhiemVu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/quantri/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>GoiNhiemVu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDGoiNhiemVu)

        <div class="form-group">
            <b>Tên gói nhiệm vụ</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenGoiNhiemVu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenGoiNhiemVu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Giá tiền</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.GiaTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GiaTien, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Loại game</b>
            <div class="col-md-10">
                <select name="LoaiGame" id="LoaiGame" class="form-select form-select-sm" aria-label=".form-select-sm example">
                    @foreach (var item in ViewBag.loaiGame)
                    {
                        <option @if (item.IDLoaiGame == Model.LoaiGame) {<text> selected </text> } value="@item.IDLoaiGame">@item.TenLoaiGame</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
