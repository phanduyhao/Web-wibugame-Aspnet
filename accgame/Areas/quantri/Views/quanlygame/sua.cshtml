@model accgame.Context.LoaiGame

@{
    ViewBag.Title = "Chỉnh sửa loại game";
    Layout = "~/Areas/quantri/Views/Shared/_Layout.cshtml";
}

<main class="content">
    <div class="card">
        <div class="card-header">
            <h4>Chỉnh sửa Loại game</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDLoaiGame)
                @if (ViewBag.notify != null)
                {
                    <div class="bg-danger p-3 rounded-2 text-light mb-3" role="alert">@ViewBag.notify</div>
                }

                <div class="form-group">
                    <b>Tên loại game</b>
                    <div class="">
                        @Html.EditorFor(model => model.TenLoaiGame, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenLoaiGame, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b>Trạng thái</b>
                    <div class="">
                        <select class="form-select mb-3" name="Hide">
                            @if (Model.Hide == true)
                            {
                                <option selected value="true">Ản</option>
                                <option value="false">Hiển thị</option>
                            }
                            else
                            {
                                <option selected value="false">Hiển thị</option>
                                <option value="true">Ẩn</option>

                            }

                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <b>Ảnh đại diện</b>
                    <div class="">
                        @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b>Số thứ tự</b>
                    <div class="">
                        @Html.EditorFor(model => model.STT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.STT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <b>Dịch vụ cày thuê</b>
                    <div class="">
                        <select class="form-select mb-3" name="DichVuCayThue">
                            @if (Model.DichVuCayThue == true)
                            {
                                <option selected value="true">Hiển thị</option>
                                <option value="false">Ẩn dịch vụ</option>
                            }
                            else
                            {
                                <option value="true">Hiển thị</option>
                                <option selected value="false">Ẩn dịch vụ</option>

                            }

                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <b>Ảnh cày thuê</b>
                    <div class="">
                        @Html.EditorFor(model => model.AnhCayThue, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AnhCayThue, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <b>Dịch vụ nạp game</b>
                    <div class="">
                        <select class="form-select mb-3" name="DichVuNapGame">
                            @if (Model.DichVuNapGame == true)
                            {
                                <option selected value="true">Hiển thị</option>
                                <option value="false">Ẩn dịch vụ</option>
                            }
                            else
                            {
                                <option value="true">Hiển thị</option>
                                <option selected value="false">Ẩn dịch vụ</option>

                            }

                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <b>Ảnh nạp game</b>
                    <div class="">
                        @Html.EditorFor(model => model.AnhNapGame, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AnhNapGame, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <b>Dịch vụ code</b>
                    <div class="">
                        <select class="form-select mb-3" name="DichVuCode">
                            @if (Model.DichVuCode == true)
                            {
                                <option selected value="true">Hiển thị</option>
                                <option value="false">Ẩn dịch vụ</option>
                            }
                            else
                            {
                                <option value="true">Hiển thị</option>
                                <option selected value="false">Ẩn dịch vụ</option>

                            }

                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <b>Ảnh code</b>
                    <div class="">
                        @Html.EditorFor(model => model.AnhCode, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.AnhCode, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mt-3">
                    <div class="col-md-offset-2 ">
                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</main>


