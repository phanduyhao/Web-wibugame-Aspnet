@model accgame.Context.Code

@{
    ViewBag.Title = "Theme code";
    Layout = "~/Areas/quantri/Views/Shared/_Layout.cshtml";
}

<main class="content">
    <div class="card">
        <div class="card-header">
            <h3>Thêm mới tài khoản</h3>
        </div>
        @if (ViewBag.thongbao != null)
        {
            <div class="w-100 p-3 bg-info text-white">
                @ViewBag.thongbao
            </div>
        }

    <div class="card-body">
        <form action="/quantri/quanlycode/themcode/@ViewBag.loaicode" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <b>Nhập thông tin</b>
                <div class="">
                    <textarea placeholder="Ví dụ: Ma_code_1" rows="6" class="form-control text-box single-line" id="thongtin" name="thongtin"></textarea>
                </div>
                <span><b>Nhập theo mẫu (mỗi một mã code hãy enter xuống dòng):<br /></b> ma_code_1 <br />ma_code_2</span>
            </div>
            <div class="form-group mt-3">
                <div class="col-md-offset-2 ">
                    <input type="submit" value="Thêm mới" class="btn btn-primary">
                </div>
            </div>
        </form>
        <div class="mt-3">
            <a href="/quantri/quanlycode/danhsach/@ViewBag.loaicode">Danh sách code</a>
        </div>
    </div>

    </div>
</main>
