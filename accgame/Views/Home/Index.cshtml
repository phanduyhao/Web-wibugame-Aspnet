                                @foreach (var item in Model.listNguoiDung.Concat(Model.listNguoiDung)) // Nhân đôi danh sách
                                {
                                    string icon = item == Model.listNguoiDung[0] ? "<span class='text-warning fs-4'>🥇</span>" :
