    }

</style>
<section id="hero" class="d-flex align-items-center" style="background-attachment: fixed">
    <div class="container position-relative text-center text-lg-start pt-0 mt-100">
        <div class="row mt-5 mt-lg-0">

            @if (ViewBag.TieuDeTopTrangChu != "")
            {
                <div class="col-xl-7 col-xxl-8 d-flex align-items-center justify-content-center position-relative" data-aos="fade-up" data-aos-delay="200">
                    <div style="background-color: #212529a1" class="card border-danger w-100">
                        <div class="card-header fs-5 border-danger text-center">
                            @ViewBag.TieuDeTopTrangChu
                        </div>
                        <div class="card-body">
                            <div class="text-light text-custom-a">
                                @Html.Raw(ViewBag.NoiDungTopTrangChu)
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-xl-9 col-xxl-8" data-aos="fade-up" data-aos-delay="100">
                    @if (!string.IsNullOrEmpty(ViewBag.bannerHome))
                    {
                        <img class="img-fluid" src="@ViewBag.bannerHome" />
                    }
                    else
                    {
                        <img class="img-fluid" src="~/Content/images/slide-wibu.gif" />
                    }
                </div>
            }
            <div class="col-xl-3 col-xxl-4 d-none d-lg-flex align-items-center justify-content-center position-relative" data-aos="fade-up" data-aos-delay="200">
                <div class="card xTech-bntbox w-100 mt-5 mt-xl-0">
                    <div class="card-header fs-5 border-bottom text-center">
                        TOP NẠP TIỀN
                    </div>
                    <div class="card-body">
                        <div class="">
                            @for (int i = 0; i < Model.listNguoiDung.Count && i < 6; i++)
                            {
                                var item = Model.listNguoiDung[i];
                                string icon = "";

                                if (i == 0)
                                {
                                    icon = "<span class='text-warning fs-4'>🥇</span>"; // Icon vàng
                                }
                                else if (i == 1)
                                {
                                    icon = "<span class='text-secondary fs-4'>🥈</span>"; // Icon bạc
                                }
                                else if (i == 2)
                                {
                                    icon = "<span class='text-warning fs-4' style='color:#cd7f32;'>🥉</span>"; // Icon đồng
                                }
                                else
                                {
                                    icon = "<span class='text-warning fs-3' style='color:#cd7f32;'>🎖️</span>"; // Icon đồng
                                }

                                <div class="text-primary d-flex justify-content-between align-items-center border-bottom py-2">
                                    <div class="custom-div d-flex align-items-center">
                                        @Html.Raw(icon)  <!-- Thêm icon nếu có -->
                                        <div class="truncate ms-2">
                                            @item.TenNguoiDung
                                        </div>
                                    </div>
                                    <div class="btn btn-info rounded-pill btn-sm">
                                        @Convert.ToInt32(item.TienNapThang).ToString("N0").Replace(",", ".") vnđ
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 d-lg-none d-flex align-items-center justify-content-center position-relative" data-aos="fade-up" data-aos-delay="200">
