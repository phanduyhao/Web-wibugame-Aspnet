@model IEnumerable<accgame.Context.GoiNhiemVu>
@{
    ViewBag.Title = "themmoi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="about" class="about about-acc">
    <div class="container mt-5">
        <div class="d-flex align-items-center justify-content-center mh-100">
            <div class="w-100" style="">
                <div class="text-center form-dangky shadow-lg p-2 p-sm-4 rounded-1">
                    <form action="/CayThue/themmoi/@ViewBag.idLoaiGame" class="border-dangky" enctype="multipart/form-data" method="post">
                        <div class="pb-3">
                            <h2 class="text-center text-uppercase d-block pt-5 pb-2 fw-bold" style="color: #726550">
                                Cày thuê @ViewBag.loaigame
                            </h2>
                            <img class="img-fluid" src="/Content/assets/img/AuthDevider.png">
                        </div>
                        <div class="py-2 py-sm-3">
                            <select class="form-control login-input rounded-3 p-3 p-sm-3 p-md-4 fw-bold fs-6" id="IDGoiNhiemVu" name="IDGoiNhiemVu">
                                <option value="0">Chọn gói</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.IDGoiNhiemVu">@Convert.ToInt32(item.GiaTien).ToString("N0") đ - @item.TenGoiNhiemVu</option>
                                }
                            </select>
                        </div>
                        <div class="py-2 py-sm-3">
                            <input placeholder="Điền UID (User ID)" class="form-control login-input rounded-3 p-3 p-sm-3 p-md-4 fw-bold fs-6" id="UID" required="" name="UID" value="@ViewBag.UID" type="text">
                        </div>
                        <div class="py-2 py-sm-3">
                            <input placeholder="Điền tên đăng nhập" class="form-control login-input rounded-3 p-3 p-sm-3 p-md-4 fw-bold fs-6" id="TenDangNhap" required="" name="TenDangNhap" value="@ViewBag.TenDangNhap" type="text">
                        </div>
                        <div class="py-2 py-sm-3">
                            <input placeholder="Điền mật khẩu tài khoản nạp" class="form-control login-input rounded-3 p-3 p-sm-3 p-md-4 fw-bold fs-6" id="MatKhau" required="" name="MatKhau" value="@ViewBag.MatKhau" type="text">
                        </div>
                        <div class="py-2 py-sm-3">
                            <input placeholder="Điền server" class="form-control login-input rounded-3 p-3 p-sm-3 p-md-4 fw-bold fs-6" id="Server" required="" name="Server" value="@ViewBag.Server" type="text">
                        </div>
                        <div class="py-2 py-sm-3">
                            <input placeholder="Điền tên nhân vật" class="form-control login-input rounded-3 p-3 p-sm-3 p-md-4 fw-bold fs-6" id="TenNhanVat" required="" name="TenNhanVat" value="@ViewBag.TenNhanVat" type="text">
                        </div>
                        <div class="py-2 py-sm-3">
                            <input placeholder="Điền số điện thoại" class="form-control login-input rounded-3 p-3 p-sm-3 p-md-4 fw-bold fs-6" id="SoDienThoai" required="" name="SoDienThoai" value="@ViewBag.SoDienThoai" type="number">
                        </div>
                        <div class="py-2 py-sm-3">
                            <input placeholder="Điền ghi chú (nếu có)" class="form-control login-input rounded-3 p-3 p-sm-3 p-md-4 fw-bold fs-6" id="GhiChu" name="GhiChu" value="@ViewBag.GhiChu" type="text">
                        </div>
                        <div class="text-danger">
                            @ViewBag.loi
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <button type="submit" class="col-lg-4 col-sm-9 col-12 btn position-relative shadow-none text-center mt-3">
                                    <img class="img-fluid" src="/Content/assets/img/Layer-button.png">
                                    <span class="position-absolute top-50 start-50 button-group fw-bold fs-6 text-white text-nowrap">Gửi ngay</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="alert alert-danger text-dark mt-4" role="alert">
            <a href="/caythue" class="btn btn-primary rounded-pill mb-3">
                Danh sách đơn cày thuê của bạn
            </a>
            <div class="col-12 col-lg-6">
                <div class="h h5 text-primary">Hướng dẫn Cày Thuê @ViewBag.loaigame</div>
                <p>Những Lưu ý khi bạn sử dụng dịch vụ cày thuê bên SHOP :&nbsp;</p><p>+ hãy đổi mật Khẩu khi đơn cày đã được đổi qua thành công hoặc hủy&nbsp;</p><p>+ Ghi đúng Số Điện thoại để bên Shop gọi lấy mã đăng nhập ( Hoặc có thể IB page )</p><p>+ Nếu Bạn cần cày bất kì DỊCH VỤ nào khác thì hãy ibox&nbsp;&nbsp;<a class="text-danger" href="@ViewBag.facebook" target="_blank">Page</a>&nbsp; shop để được tư vấn nhé&nbsp;</p><p><br></p>
            </div>
        </div>
    </div>
</section>
<script>

    document.querySelector("form").addEventListener("submit", function (event) {
        var sotien = document.getElementById("IDGoiNhiemVu").value;
        if (sotien == 0) {
            event.preventDefault();
            alert("Bạn chưa chọn gói nhiệm vụ!");
        }
    });

</script>
